{
  "manifest_version": 2,
  "name": "Tetration Scribe",
  "description": "In place annotation editing extension for Tetration. Requires software version 2.3+",
  "version": "1.0",
  "browser_action": {
    "default_icon": "tetration48.png",
    "default_popup": "src/popup.html"
  },
  "icons": {
    "16": "tetration16.png",
    "48": "tetration48.png",
    "128": "tetration128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "src/build/main.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}